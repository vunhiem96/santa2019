<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_marginTop="5dp">
    <ImageView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/icon_ring"
        android:src="@mipmap/a1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />
    <TextView
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Merry Chrishmat"
        android:id="@+id/tv_name_ring"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/icon_ring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_time_ring"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="00:00"
        android:layout_toRightOf="@id/icon_ring"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_name_ring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"/>
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/img_play_ring"
        android:layout_marginRight="10dp"
        android:src="@drawable/play_ring_tune"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/more_ring"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/img_play_ring"
        android:src="@drawable/more_ring_tune"
        android:layout_width="40dp"
        android:layout_height="40dp" />
<View
    android:layout_below="@id/tv_time_ring"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#fff"
    />
</RelativeLayout>